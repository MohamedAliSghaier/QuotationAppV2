{% extends 'base.html.twig' %}

{% block title %}Folding index{% endblock %}

{% block body %}
    <h1>Folding index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for folding in foldings %}
            <tr>
                <td>{{ folding.id }}</td>
                <td>{{ folding.price }}</td>
                <td>
                    <a href="{{ path('app_folding_show', {'id': folding.id}) }}">show</a>
                    <a href="{{ path('app_folding_edit', {'id': folding.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_folding_new') }}">Create new</a>
{% endblock %}
