{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Admin Dashboard</h1>
    <p>Welcome back, <strong>{{ app.user.email }}</strong>!</p>

    This friendly message is coming from:
    <div class="container mt-4">
        <div class="col-md-3 mb-3">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Papers</h5>
                    <a href="{{ path('app_paper_index') }}" class="btn btn-primary">Manage Papers</a>
                </div>
                <div class="card-body text-center">
                    <h5 class="card-title">Printing Method</h5>
                    <a href="{{ path('app_printing_method_index') }}" class="btn btn-primary">Manage Printing Methods</a>
                </div>
                <div class="card-body text-center">
                    <h5 class="card-title">Corners</h5>
                    <a href="{{ path('app_corners_index') }}" class="btn btn-primary">Manage Corners</a>
                </div>
                <div class="card-body text-center">
                    <h5 class="card-title">Folding</h5>
                    <a href="{{ path('app_folding_index') }}" class="btn btn-primary">Manage Folding</a>
                </div>
                <div class="card-body text-center">
                    <h5 class="card-title">Hot Foil</h5>
                    <a href="{{ path('app_hot_foil_index') }}" class="btn btn-primary">Manage Hot Foil</a>
                </div>
                <div class="card-body text-center">
                    <h5 class="card-title">Lamination</h5>
                    <a href="{{ path('app_lamination_index') }}" class="btn btn-primary">Manage Lamination</a>
                </div>
            </div>
        </div>
    <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
    </div>
</div>
{% endblock %}
